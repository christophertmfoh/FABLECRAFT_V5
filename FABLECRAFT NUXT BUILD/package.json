{
  "name": "fablecraft-foundation",
  "private": true,
  "type": "module",
  "_SAFETY_WARNING": "NEVER run 'kill node' or 'pkill node' - Use Ctrl+C to stop processes safely",
  "scripts": {
    "init": "./AGENT_INIT.sh",
    "predev": "./AGENT_INIT.sh",
    "safe-stop": "./scripts/safe-stop.sh",
    "list-dev": "./scripts/list-dev-servers.sh",
    "dev": "echo '⚠️  REMINDER: Use Ctrl+C to stop the server, NEVER use killall/pkill node! ⚠️' && npx nuxi dev",
    "dev:alt": "echo '⚠️  REMINDER: Use Ctrl+C to stop the server, NEVER use killall/pkill node! ⚠️' && npx nuxi dev --port 3050",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "format": "pnpm prettier:fix && pnpm lint:fix",
    "fix-console": "node scripts/fix-console-logs.cjs",
    "typecheck": "nuxt typecheck",
    "typecheck:skip-lib": "vue-tsc --noEmit --skipLibCheck",
    "clean": "rm -rf .nuxt .output dist",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:push": "supabase db push",
    "db:pull": "supabase db pull",
    "db:diff": "supabase db diff",
    "db:types": "supabase gen types typescript --local > types/supabase.ts",
    "db:status": "supabase status",
    "prepare": "husky"
  },
  "dependencies": {
    "@iconify-json/lucide": "1.2.60",
    "@nuxt/devtools": "1.6.0",
    "@nuxt/icon": "1.15.0",
    "@nuxtjs/supabase": "1.6.0",
    "@pinia/nuxt": "0.11.2",
    "@tiptap/starter-kit": "3.0.9",
    "@tiptap/vue-3": "3.0.9",
    "@vueuse/core": "13.6.0",
    "@vueuse/nuxt": "13.6.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "h3-compression": "0.3.2",
    "nuxt": "3.18.0",
    "tailwind-merge": "3.3.1",
    "vue": "3.5.18",
    "vue-router": "4.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@nuxt/eslint": "1.7.1",
    "@nuxt/kit": "3.18.0",
    "@nuxtjs/tailwindcss": "6.14.0",
    "@testing-library/vue": "8.1.0",
    "@types/node": "20.14.15",
    "@typescript-eslint/parser": "8.39.0",
    "@vue/test-utils": "2.4.6",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-vue": "10.4.0",
    "glob": "11.0.3",
    "happy-dom": "^15.11.7",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "supabase": "2.33.9",
    "typescript": "5.4.5",
    "vitest": "3.2.4",
    "vue-tsc": "3.0.5"
  }
}
